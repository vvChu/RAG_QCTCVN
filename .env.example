# =============================================================================
# CCBA RAG System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Vector Database (Milvus / Zilliz Cloud)
# -----------------------------------------------------------------------------
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
MILVUS_SECURE=False
MILVUS_COLLECTION_NAME=legal_documents

# For Zilliz Cloud, use:
# MILVUS_HOST=your-cluster.serverless.region.cloud.zilliz.com
# MILVUS_PORT=443
# MILVUS_SECURE=True

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------

# Google Gemini (Primary)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Groq (Fallback)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# DeepSeek (Alternative)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# -----------------------------------------------------------------------------
# Document Parsing
# -----------------------------------------------------------------------------
LLAMA_CLOUD_API_KEY=your_llamaparse_api_key_here

# -----------------------------------------------------------------------------
# Embedding & Retrieval
# -----------------------------------------------------------------------------
BGE_MODEL_NAME=BAAI/bge-m3
BGE_MAX_LENGTH=1024
BGE_USE_FP16=False

# Reranker (set to False for fast CPU mode)
ENABLE_RERANKER=False
RERANKER_MODEL_NAME=BAAI/bge-reranker-v2-m3
RERANKER_TOP_K=100
RERANKER_TOP_N=5

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
ENVIRONMENT=development
